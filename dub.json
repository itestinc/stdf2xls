{
	"name" : "stdf2xls",
    "buildTypes": {
        "unittest": {
            "buildOptions": ["unittests"]
        },
        "release": {
            "buildOptions": ["releaseMode", "optimize"]
        }
    },
	"description" : "Convert STDF data files to xlsx spreadhseet format",
    "importPaths": [
        "src/"
    ],  
    "lflags-posix": [
        "-L$PACKAGE_DIR/src/libxlsxwriter/src/"
    ],  
    "lflags-windows": [
        "/LIBPATH:$PACKAGE_DIR\\install_dir\\libxlsxwriter\\lib\\x64\\Release",
        "/LIBPATH:$PACKAGE_DIR\\install_dir\\zlib\\lib"
    ],  
    "libs-posix": [
        "xlsxwriter"
    ],  
    "libs-windows": [
        "msvcrt",
        "xlsxwriter",
        "zlibstatic"
    ],  
    "preBuildCommands-posix": [
        "make -C $PACKAGE_DIR/src/libxlsxwriter"
    ],  
    "preBuildCommands-windows": [
        "$PACKAGE_DIR\\windepbuild.bat",
        "cd $PACKAGE_DIR && dmd -run sizetdisable.d"
    ],  
    "sourcePaths": [
        "src/"
    ],  
	"TargetType" : "executable",
	"mainSourceFile" : "src/main.d",
    "dependencies" : {
        "printed": "~>0.0.10",
    },
    "subPackages": [
        "./xlsxTest/",
        "./histoTest/"
    ]
}
